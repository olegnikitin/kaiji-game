		<put-attribute name="title" value="${head_title} ${pageContext.request.userPrincipal.name}" />
		<put-attribute name="content" value="/WEB-INF/views/statistics.jsp" />
	</definition>
	<definition name="system-configuration" extends="general">
		<put-attribute name="title" value="${system_configuration_head_title}" />
		<put-attribute name="content" value="/WEB-INF/views/system-configuration.jsp" />
